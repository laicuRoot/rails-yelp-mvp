<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav-bar navbar-light bg-light border-bottom">
      <div class="container-fluid d-flex justify-content-between">
        <span class="navbar-brand">
          <%= link_to "YELP", restaurants_path, :class => 'text-secondary'%>
        </span>
        <span class="nav-link">
          <%= link_to "New Restaurant",  new_restaurant_path(@restaurant), :class => 'btn btn-secondary text-light' %>
        </span>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
